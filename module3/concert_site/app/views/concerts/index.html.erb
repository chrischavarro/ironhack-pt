<div class="container">
<div class="col-md-4">

<form action="/search" method="POST">
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<input type="text" name="price_search" placeholder="Search by price">
</form>

<ul>
	<% @concerts.each do |concert| %>
	<li>
		<%= link_to(concert.artist, concert_path(concert)) %> 
	</li>
	<% end %>
</ul>
</div>
<div class="col-md-4 sidebar">
<p class="sidebar_header">Concerts happening later this month</p>
<% @monthly_concerts.each do |concert| %>
	<ul>
		<li>
			<%= link_to(concert.artist, concert_path(concert), class:"sidebar" ) %>
		</li>
	</ul>
<% end %>
</div>
</div>

<%= link_to("Add a new Concert", new_concert_path)%> <br>
<%= link_to("Most Popular Concerts", popular_path)%> <br>
